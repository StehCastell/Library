@model List<LibraryWeb.Models.Collection>

@{
    ViewData["Title"] = "Collections";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Library System</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-book"></i>
                <span>Library</span>
            </div>
        </div>

        <nav class="sidebar-nav">
            <a href="/books" class="nav-item">
                <i class="fas fa-th-large"></i>
                <span>Dashboard</span>
            </a>
            <a href="/books" class="nav-item">
                <i class="fas fa-book"></i>
                <span>Books</span>
            </a>
            <a href="/authors" class="nav-item">
                <i class="fas fa-user-edit"></i>
                <span>Authors</span>
            </a>
            <a href="/collections" class="nav-item active">
                <i class="fas fa-layer-group"></i>
                <span>Collections</span>
            </a>
            <a href="/books" class="nav-item">
                <i class="fas fa-chart-bar"></i>
                <span>Statistics</span>
            </a>
            <a href="/books" class="nav-item">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-details">
                    <div class="user-name">@ViewBag.UserName</div>
                    <a href="/Account/Logout" class="logout-link">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>

        <!-- Sidebar Collapse Button (inside sidebar, bottom) -->
        <button class="sidebar-collapse-btn" onclick="toggleSidebar()" title="Hide sidebar">
            <i class="fas fa-angles-left"></i>
        </button>
    </aside>

    <!-- Sidebar Overlay (for mobile) -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <!-- Sidebar Toggle Button (floating, bottom-left) -->
    <button class="sidebar-toggle-btn" onclick="toggleSidebar()" title="Show sidebar">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-header">
            <h1>Collections Management</h1>
            <p class="page-description">Organize your books into collections</p>
        </div>

        <!-- Message Display for Collections -->
        <div id="collectionMessage"></div>

        <!-- Add/Edit Collection Form (Hidden by default) -->
        <div id="collectionFormSection" class="content-section hidden">
            <div class="section-header">
                <h2 id="collectionFormTitle">Create New Collection</h2>
                <button type="button" class="btn-close" onclick="hideCollectionForm()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form id="formCollection" class="modern-form">
                <input type="hidden" id="editCollectionId">

                <div class="form-grid">
                    <div class="form-group">
                        <label for="collectionName">
                            <i class="fas fa-layer-group"></i> Collection Name
                        </label>
                        <input type="text" id="collectionName" name="collectionName" required
                               placeholder="e.g., Fantasy Series"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="collectionDescription">
                            <i class="fas fa-info-circle"></i> Description
                        </label>
                        <textarea id="collectionDescription" name="collectionDescription" rows="4"
                                  placeholder="Describe this collection..."></textarea>
                    </div>

                    <!-- Book Selection with Add Button -->
                    <div class="form-group">
                        <label for="collectionBooks">
                            <i class="fas fa-book"></i> Books
                        </label>
                        <div style="display: flex; gap: 8px;">
                            <select id="collectionBooks" name="collectionBooks" multiple class="select2-books" style="flex: 1;">
                                <!-- Will be populated by JavaScript -->
                            </select>
                            <button type="button" class="btn-icon" onclick="openAddBookModal()" title="Add new book">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Author Selection with Add Button -->
                    <div class="form-group">
                        <label for="collectionAuthors">
                            <i class="fas fa-user-edit"></i> Authors
                        </label>
                        <div style="display: flex; gap: 8px;">
                            <select id="collectionAuthors" name="collectionAuthors" multiple class="select2-authors" style="flex: 1;">
                                <!-- Will be populated by JavaScript -->
                            </select>
                            <button type="button" class="btn-icon" onclick="openAddAuthorModal()" title="Add new author">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="btnSubmitCollection" class="btn-primary">
                        <i class="fas fa-save"></i> Save Collection
                    </button>
                    <button type="button" id="btnCancelCollection" class="btn-secondary" onclick="cancelCollectionEdit()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>

        <!-- Collections Section -->
        <div id="collectionsSection" class="content-section">
            <div class="section-header">
                <div>
                    <h2>Collections</h2>
                    <p class="section-subtitle">Organize your books into collections</p>
                </div>
                <button class="btn-add" onclick="showCollectionForm()">
                    <i class="fas fa-plus"></i> Create Collection
                </button>
            </div>

            <div id="collectionsContainer" class="collections-grid">
                <!-- Will be populated by JavaScript -->
            </div>
        </div>
    </main>

    <!-- Modal for Adding Book -->
    <div id="addBookModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Book</h3>
                <button type="button" class="btn-close" onclick="closeAddBookModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="formAddBook" class="modern-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="modalBookTitle">
                            <i class="fas fa-book"></i> Title
                        </label>
                        <input type="text" id="modalBookTitle" required placeholder="Book title">
                    </div>
                    <div class="form-group">
                        <label for="modalBookAuthor">
                            <i class="fas fa-user"></i> Author
                        </label>
                        <input type="text" id="modalBookAuthor" placeholder="Book author">
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-save"></i> Add Book
                    </button>
                    <button type="button" class="btn-secondary" onclick="closeAddBookModal()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal for Adding Author -->
    <div id="addAuthorModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Author</h3>
                <button type="button" class="btn-close" onclick="closeAddAuthorModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="formAddAuthor" class="modern-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="modalAuthorName">
                            <i class="fas fa-user"></i> Author Name
                        </label>
                        <input type="text" id="modalAuthorName" required placeholder="e.g., J.K. Rowling">
                    </div>
                    <div class="form-group">
                        <label for="modalAuthorNationality">
                            <i class="fas fa-globe"></i> Nationality
                        </label>
                        <input type="text" id="modalAuthorNationality" placeholder="e.g., British">
                    </div>
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="modalAuthorBio">
                            <i class="fas fa-info-circle"></i> Biography
                        </label>
                        <textarea id="modalAuthorBio" rows="3" placeholder="Brief biography..."></textarea>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-save"></i> Add Author
                    </button>
                    <button type="button" class="btn-secondary" onclick="closeAddAuthorModal()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/collections.js"></script>
</body>
</html>
