@model List<LibraryWeb.Models.Collection>

@{
    ViewData["Title"] = "My Collections";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Library System</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <!-- jQuery (required for Select2) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <style>
        /* Ajustar altura do Select2 para combinar com inputs normais */
        .select2-container--default .select2-selection--multiple {
            min-height: 44px !important;
            max-height: 44px !important;
            padding: 6px 8px !important;
            border: 1px solid var(--border-color) !important;
            border-radius: 8px !important;
            overflow-y: auto !important;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__rendered {
            padding: 0 !important;
            display: flex !important;
            flex-wrap: nowrap !important;
            overflow-x: auto !important;
            gap: 4px !important;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            margin: 0 !important;
            padding: 4px 8px !important;
            font-size: 13px !important;
            background-color: var(--primary-color) !important;
            color: white !important;
            border: none !important;
            border-radius: 4px !important;
            white-space: nowrap !important;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
            color: white !important;
            margin-right: 4px !important;
        }

        .select2-container--default .select2-selection--multiple .select2-search--inline {
            margin: 0 !important;
        }

        .select2-container--default .select2-selection--multiple .select2-search--inline .select2-search__field {
            margin: 0 !important;
            padding: 2px 4px !important;
            height: auto !important;
            min-width: 100px !important;
        }

        /* Dark theme adjustments */
        .dark-theme .select2-container--default .select2-selection--multiple {
            background-color: var(--content-bg) !important;
            border-color: #3a3f5c !important;
        }

        .dark-theme .select2-container--default .select2-selection--multiple .select2-search--inline .select2-search__field {
            color: var(--text-primary) !important;
        }

        /* Collection stats styling */
        .collection-stats {
            display: flex;
            align-items: center;
            gap: 12px;
            flex-wrap: wrap;
        }

        .books-count {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            background-color: var(--hover-bg);
            color: var(--text-secondary);
            border-radius: 6px;
            font-size: 13px;
            font-weight: 500;
        }

        .books-count i {
            font-size: 12px;
        }

        .status-badge i {
            margin-right: 4px;
        }

        .dark-theme .books-count {
            background-color: rgba(255, 255, 255, 0.05);
        }
    </style>
</head>
<body class="dashboard-layout">
    <script>
        // Apply saved theme immediately (before page renders)
        // Priority: server theme > localStorage > default 'light'
        const serverTheme = '@ViewBag.UserTheme';
        const savedTheme = serverTheme || localStorage.getItem('theme') || 'light';
        localStorage.setItem('theme', savedTheme); // Sync localStorage with server
        if (savedTheme === 'dark') {
            document.body.classList.add('dark-theme');
        }
    </script>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-book"></i>
                <span>Library</span>
            </div>
        </div>

        <nav class="sidebar-nav">
            <a href="/books" class="nav-item">
                <i class="fas fa-th-large"></i>
                <span>Dashboard</span>
            </a>
            <a href="/books" class="nav-item" id="nav-books">
                <i class="fas fa-book"></i>
                <span>Books</span>
            </a>
            <a href="/authors" class="nav-item" id="nav-authors">
                <i class="fas fa-user-edit"></i>
                <span>Authors</span>
            </a>
            <a href="/collections" class="nav-item active" id="nav-collections">
                <i class="fas fa-layer-group"></i>
                <span>Collections</span>
            </a>
            <a href="/books" class="nav-item" id="nav-statistics">
                <i class="fas fa-chart-bar"></i>
                <span>Statistics</span>
            </a>
            <a href="/books" class="nav-item" id="nav-settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-details">
                    <p class="user-name">@ViewBag.UserName</p>
                    <p class="user-role">Book Lover</p>
                </div>
            </div>
            <form action="/account/logout" method="post" class="logout-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-logout-sidebar" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </form>
        </div>

        <!-- Sidebar Collapse Button (inside sidebar, bottom) -->
        <button class="sidebar-collapse-btn" onclick="toggleSidebar()" title="Hide sidebar">
            <i class="fas fa-angles-left"></i>
        </button>
    </aside>

    <!-- Sidebar Overlay (for mobile) -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <!-- Sidebar Toggle Button (floating, bottom-left) -->
    <button class="sidebar-toggle-btn" onclick="toggleSidebar()" title="Show sidebar">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="dashboard-header">
            <div class="header-left">
                <h1>My Collections</h1>
                <p class="header-subtitle">Organize your books by series, genre, or theme</p>
            </div>
            <div class="header-right">
                <button class="theme-toggle-btn" onclick="changeTheme()">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </header>

        <!-- Message Display for Collections -->
        <div id="collectionMessage"></div>

        <!-- Add/Edit Collection Form (Hidden by default) -->
        <div id="collectionFormSection" class="content-section hidden">
            <div class="section-header">
                <h2 id="collectionFormTitle">Create New Collection</h2>
                <button type="button" class="btn-close" onclick="hideCollectionForm()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form id="formCollection" class="modern-form">
                <input type="hidden" id="editCollectionId">

                <div class="form-grid">
                    <div class="form-group">
                        <label for="collectionName">
                            <i class="fas fa-layer-group"></i> Collection Name
                        </label>
                        <input type="text" id="collectionName" name="collectionName" required
                               placeholder="e.g., Fantasy Series, Classic Novels"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>

                    <!-- Authors Multi-select -->
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="collectionAuthors">
                            <i class="fas fa-user-pen"></i> Authors
                        </label>
                        <div style="display: flex; gap: 8px; align-items: flex-start;">
                            <div style="flex: 1;">
                                <select id="collectionAuthors" name="collectionAuthors" multiple="multiple" style="width: 100%;">
                                    <!-- Options will be populated by JavaScript -->
                                </select>
                                <div id="selectedCollectionAuthorsBadges" class="selected-authors-badges"></div>
                            </div>
                            <button type="button" class="btn-secondary" onclick="openAddAuthorModal()" title="Add new author">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Books Multi-select -->
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="collectionBooks">
                            <i class="fas fa-book"></i> Books
                        </label>
                        <div style="display: flex; gap: 8px; align-items: flex-start;">
                            <div style="flex: 1;">
                                <select id="collectionBooks" name="collectionBooks" multiple="multiple" style="width: 100%;">
                                    <!-- Options will be populated by JavaScript -->
                                </select>
                                <div id="selectedCollectionBooksBadges" class="selected-books-badges"></div>
                            </div>
                            <button type="button" class="btn-secondary" onclick="openAddBookModal()" title="Add new book">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Reorder Books Section (only visible when editing with books) -->
                    <div id="reorderBooksSection" class="form-group" style="grid-column: 1 / -1; display: none;">
                        <div class="reorder-header">
                            <label>
                                <i class="fas fa-sort"></i> Reading Order
                            </label>
                            <p class="hint-text">Drag and drop to reorder books in your reading sequence</p>
                        </div>
                        <div id="sortableBooksList" class="sortable-books-list">
                            <!-- Books will be populated here by JavaScript -->
                        </div>
                        <button type="button" class="btn-primary" onclick="saveBookOrder()" style="margin-top: 1rem;">
                            <i class="fas fa-save"></i> Save Order
                        </button>
                    </div>

                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="collectionDescription">
                            <i class="fas fa-info-circle"></i> Description
                        </label>
                        <textarea id="collectionDescription" name="collectionDescription" rows="3"
                                  placeholder="Describe this collection..."></textarea>
                    </div>
                    <div class="form-group-full" style="grid-column: 1 / -1;">
                        <label for="collectionProfileImage">
                            <i class="fas fa-image"></i> Profile Image (Optional)
                        </label>
                        <div class="image-upload-area">
                            <input type="file" id="collectionProfileImage" accept="image/*"
                                   onchange="handleCollectionImageSelect(event)" class="file-input">
                            <div id="collectionImagePreviewContainer" class="image-preview-wrapper" style="display: none;">
                                <div class="image-preview-circle">
                                    <img id="collectionImagePreview" class="image-preview-img">
                                </div>
                                <button type="button" class="btn-remove-preview" onclick="removeCollectionImage()">
                                    <i class="fas fa-times-circle"></i> Remove Image
                                </button>
                            </div>
                            <div id="collectionImageUploadPlaceholder" class="upload-placeholder-enhanced">
                                <div class="upload-icon-wrapper">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                </div>
                                <p class="upload-text">Click to upload or drag and drop</p>
                                <small class="upload-hint">PNG, JPG, JPEG (max 5MB)</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="btnSubmitCollection" class="btn-primary">
                        <i class="fas fa-save"></i> Save Collection
                    </button>
                    <button type="button" id="btnCancelCollection" class="btn-secondary" onclick="cancelCollectionEdit()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>

        <!-- Collections Grid -->
        <div id="collectionsSection" class="content-section">
            <div class="section-header">
                <div>
                    <h2>All Collections</h2>
                    <p class="section-subtitle">Browse and manage your collections</p>
                </div>
                <button class="btn-add" onclick="showCollectionForm()">
                    <i class="fas fa-plus"></i> Create Collection
                </button>
            </div>

            <div id="collectionsContainer" class="collections-grid">
                <!-- Will be populated by JavaScript -->
            </div>
        </div>
    </main>

    <!-- Modal: Add New Book -->
    <div id="addBookModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Quick Add Book</h2>
                <button type="button" class="btn-close" onclick="closeAddBookModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="formAddBook" class="modern-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="modalBookTitle">
                            <i class="fas fa-heading"></i> Book Title
                        </label>
                        <input type="text" id="modalBookTitle" name="modalBookTitle" required
                               placeholder="e.g., The Hobbit"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="modalBookAuthor">
                            <i class="fas fa-user-edit"></i> Author
                        </label>
                        <input type="text" id="modalBookAuthor" name="modalBookAuthor" required
                               placeholder="e.g., J.R.R. Tolkien"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="modalBookGenre">
                            <i class="fas fa-tag"></i> Genre
                        </label>
                        <input type="text" id="modalBookGenre" name="modalBookGenre" required
                               placeholder="e.g., Fantasy, Adventure"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="modalBookPages">
                            <i class="fas fa-file-alt"></i> Number of Pages
                        </label>
                        <input type="number" id="modalBookPages" name="modalBookPages" min="1" required
                               placeholder="e.g., 310"
                               oninvalid="this.setCustomValidity('Please enter a valid number')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="modalBookType">
                            <i class="fas fa-layer-group"></i> Format
                        </label>
                        <select id="modalBookType" name="modalBookType" required
                                oninvalid="this.setCustomValidity('Please select an option')"
                                onchange="this.setCustomValidity('')">
                            <option value="">Select format...</option>
                            <option value="physical">Physical Book</option>
                            <option value="digital">E-Book / Digital</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="modalBookStatus">
                            <i class="fas fa-tasks"></i> Reading Status
                        </label>
                        <select id="modalBookStatus" name="modalBookStatus" required
                                oninvalid="this.setCustomValidity('Please select an option')"
                                onchange="this.setCustomValidity('')">
                            <option value="">Select status...</option>
                            <option value="not-read">Want to Read</option>
                            <option value="reading">Currently Reading</option>
                            <option value="read">Finished</option>
                            <option value="abandoned">Abandoned</option>
                        </select>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-plus"></i> Add Book
                    </button>
                    <button type="button" class="btn-secondary" onclick="closeAddBookModal()">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal: Add New Author -->
    <div id="addAuthorModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Quick Add Author</h2>
                <button type="button" class="btn-close" onclick="closeAddAuthorModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="formAddAuthor" class="modern-form">
                <div class="form-group">
                    <label for="modalAuthorName">
                        <i class="fas fa-user"></i> Author Name
                    </label>
                    <input type="text" id="modalAuthorName" name="modalAuthorName" required
                           placeholder="e.g., George R.R. Martin">
                </div>
                <div class="form-group">
                    <label for="modalAuthorNationality">
                        <i class="fas fa-globe"></i> Nationality
                    </label>
                    <input type="text" id="modalAuthorNationality" name="modalAuthorNationality"
                           placeholder="e.g., American">
                </div>
                <div class="form-group">
                    <label for="modalAuthorBio">
                        <i class="fas fa-info-circle"></i> Biography
                    </label>
                    <textarea id="modalAuthorBio" name="modalAuthorBio" rows="3"
                              placeholder="Brief biography..."></textarea>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-plus"></i> Add Author
                    </button>
                    <button type="button" class="btn-secondary" onclick="closeAddAuthorModal()">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="~/js/collections.js"></script>
</body>
</html>
