@model List<LibraryWeb.Models.Book>

@{
    ViewData["Title"] = "My Books";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Library System</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="dashboard-layout">
    <script>
        // Apply saved theme immediately (before page renders)
        // Priority: server theme > localStorage > default 'light'
        const serverTheme = '@ViewBag.UserTheme';
        const savedTheme = serverTheme || localStorage.getItem('theme') || 'light';
        localStorage.setItem('theme', savedTheme); // Sync localStorage with server
        if (savedTheme === 'dark') {
            document.body.classList.add('dark-theme');
        }
    </script>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-book"></i>
                <span>Library</span>
            </div>
            <button class="toggle-sidebar-btn" onclick="toggleSidebar()">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>

        <nav class="sidebar-nav">
            <a href="/books" class="nav-item active">
                <i class="fas fa-th-large"></i>
                <span>Dashboard</span>
            </a>
            <div class="nav-item-with-submenu">
                <a href="/books" class="nav-item" id="nav-books">
                    <i class="fas fa-book"></i>
                    <span>Books</span>
                    <i class="fas fa-chevron-down submenu-arrow"></i>
                </a>
                <div class="submenu">
                    <a href="#" class="submenu-item active" onclick="filterBooksByType('all', this); return false;">
                        <i class="fas fa-list"></i>
                        <span>All Books</span>
                    </a>
                    <a href="#" class="submenu-item" onclick="filterBooksByType('physical', this); return false;">
                        <i class="fas fa-book"></i>
                        <span>Physical Books</span>
                    </a>
                    <a href="#" class="submenu-item" onclick="filterBooksByType('digital', this); return false;">
                        <i class="fas fa-tablet-alt"></i>
                        <span>Digital Books</span>
                    </a>
                </div>
            </div>
            <a href="/authors" class="nav-item" id="nav-authors">
                <i class="fas fa-user-edit"></i>
                <span>Authors</span>
            </a>
            <a href="/collections" class="nav-item" id="nav-collections">
                <i class="fas fa-layer-group"></i>
                <span>Collections</span>
            </a>
            <a href="/books" class="nav-item" id="nav-statistics">
                <i class="fas fa-chart-bar"></i>
                <span>Statistics</span>
            </a>
            <a href="/books" class="nav-item" id="nav-settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-details">
                    <p class="user-name">@ViewBag.UserName</p>
                    <p class="user-role">Book Lover</p>
                </div>
            </div>
            <form action="/account/logout" method="post" class="logout-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-logout-sidebar" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </form>
        </div>

        <!-- Sidebar Collapse Button (inside sidebar, bottom) -->
        <button class="sidebar-collapse-btn" onclick="toggleSidebar()" title="Hide sidebar">
            <i class="fas fa-angles-left"></i>
        </button>
    </aside>

    <!-- Sidebar Overlay (for mobile) -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="dashboard-header">
            <div class="header-left">
                <h1>Hello, @ViewBag.UserName! 👋</h1>
                <p class="header-subtitle">Welcome back to your personal library</p>
            </div>
            <div class="header-right">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Search books..." />
                </div>
                <button class="theme-toggle-btn" onclick="changeTheme()">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </header>

        <!-- Stats Cards -->
        <div class="stats-container">
            <div class="stat-card stat-card-primary">
                <div class="stat-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Total Books</p>
                    <h2 class="stat-value" id="totalBooks">@(Model?.Count ?? 0)</h2>
                    <p class="stat-change positive">In your library</p>
                </div>
            </div>

            <div class="stat-card stat-card-success">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Completed</p>
                    <h2 class="stat-value" id="booksRead">@(Model?.Count(b => b.Status == "read") ?? 0)</h2>
                    <p class="stat-change positive">Books finished</p>
                </div>
            </div>

            <div class="stat-card stat-card-warning">
                <div class="stat-icon">
                    <i class="fas fa-book-reader"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">In Progress</p>
                    <h2 class="stat-value" id="booksReading">@(Model?.Count(b => b.Status == "reading") ?? 0)</h2>
                    <p class="stat-change">Currently reading</p>
                </div>
            </div>

            <div class="stat-card stat-card-danger">
                <div class="stat-icon">
                    <i class="fas fa-bookmark"></i>
                </div>
                <div class="stat-content">
                    <p class="stat-label">Want to Read</p>
                    <h2 class="stat-value" id="booksNotRead">@(Model?.Count(b => b.Status == "not-read") ?? 0)</h2>
                    <p class="stat-change">On your list</p>
                </div>
            </div>
        </div>

        <!-- Message Display -->
        <div id="bookMessage"></div>

        <!-- Add/Edit Book Form (Hidden by default) -->
        <div id="bookFormSection" class="content-section hidden">
            <div class="section-header">
                <h2 id="formTitle">Add New Book</h2>
                <button type="button" class="btn-close" onclick="hideBookForm()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form id="formBook" class="modern-form">
                <input type="hidden" id="editBookId">

                <div class="form-grid">
                    <div class="form-group">
                        <label for="bookTitle">
                            <i class="fas fa-heading"></i> Book Title
                        </label>
                        <input type="text" id="bookTitle" name="bookTitle" required
                               placeholder="e.g., The Great Gatsby"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="bookAuthors">
                            <i class="fas fa-user-edit"></i> Authors
                            <button type="button" class="btn-add-inline" onclick="openAddAuthorModal()" title="Add new author">
                                <span class="plus-icon">+</span>
                            </button>
                        </label>
                        <select id="bookAuthors" name="bookAuthors" multiple="multiple" style="width: 100%;">
                        </select>
                        <div id="selectedAuthorsBadges" class="selected-authors-badges"></div>
                    </div>
                    <div class="form-group">
                        <label for="bookGenre">
                            <i class="fas fa-tag"></i> Genre
                        </label>
                        <input type="text" id="bookGenre" name="bookGenre" required
                               placeholder="e.g., Fiction, Mystery, Romance"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="bookPages">
                            <i class="fas fa-file-alt"></i> Number of Pages
                        </label>
                        <input type="number" id="bookPages" name="bookPages" min="1" required
                               placeholder="e.g., 320"
                               oninvalid="this.setCustomValidity('Please enter a valid number')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="bookType">
                            <i class="fas fa-layer-group"></i> Format
                        </label>
                        <select id="bookType" name="bookType" required
                                oninvalid="this.setCustomValidity('Please select an option')"
                                onchange="this.setCustomValidity('')">
                            <option value="">Select format...</option>
                            <option value="physical">Physical Book</option>
                            <option value="digital">E-Book / Digital</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="bookStatus">
                            <i class="fas fa-tasks"></i> Reading Status
                        </label>
                        <select id="bookStatus" name="bookStatus" required
                                oninvalid="this.setCustomValidity('Please select an option')"
                                onchange="this.setCustomValidity('')">
                            <option value="">Select status...</option>
                            <option value="not-read">Want to Read</option>
                            <option value="reading">Currently Reading</option>
                            <option value="read">Finished</option>
                            <option value="abandoned">Abandoned</option>
                        </select>
                    </div>
                </div>

                <div class="form-group-full">
                    <label for="bookCoverImage">
                        <i class="fas fa-image"></i> Cover Image (Optional)
                    </label>
                    <div class="image-upload-area">
                        <input type="file" id="bookCoverImage" name="bookCoverImage"
                               accept="image/*" onchange="handleImageSelect(event)"
                               class="file-input">
                        <div id="imagePreviewContainer" class="image-preview-wrapper" style="display: none;">
                            <div class="book-cover-preview">
                                <img id="imagePreview" class="image-preview-img" alt="Book cover preview">
                            </div>
                            <button type="button" class="btn-remove-preview" onclick="removeImage()" title="Remove image">
                                <i class="fas fa-times-circle"></i> Remove Image
                            </button>
                        </div>
                        <div id="imageUploadPlaceholder" class="upload-placeholder-enhanced">
                            <div class="upload-icon-wrapper">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <p class="upload-text">Click to upload or drag and drop</p>
                            <small class="upload-hint">PNG, JPG, JPEG (max 5MB)</small>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="btnSubmitBook" class="btn-primary">
                        <i class="fas fa-save"></i> Save Book
                    </button>
                    <button type="button" id="btnCancelEdit" class="btn-secondary" onclick="cancelEdit()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>

        <!-- Books Table -->
        <div id="booksTableSection" class="content-section">
            <div class="section-header">
                <div>
                    <h2>My Book Collection</h2>
                    <p class="section-subtitle">Browse and manage all your books</p>
                </div>
                <button class="btn-add" onclick="showBookForm()">
                    <i class="fas fa-plus"></i> Add Book
                </button>
            </div>

            <div id="booksTableContainer" class="table-container">
                @if (Model == null || Model.Count == 0)
                {
                    <div class="empty-state">
                        <i class="fas fa-book empty-icon"></i>
                        <h3>Your library is empty</h3>
                        <p>Start building your collection by adding your first book!</p>
                        <button class="btn-primary" onclick="showBookForm()">
                            <i class="fas fa-plus"></i> Add Your First Book
                        </button>
                    </div>
                }
                else
                {
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>COVER</th>
                                <th>TITLE</th>
                                <th>AUTHOR</th>
                                <th>GENRE</th>
                                <th>PAGES</th>
                                <th>FORMAT</th>
                                <th>STATUS</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody id="booksTableBody">
                            @foreach (var book in Model)
                            {
                                var statusClass = book.Status == "read" ? "status-read" :
                                                 book.Status == "reading" ? "status-reading" :
                                                 book.Status == "abandoned" ? "status-abandoned" : "status-not-read";
                                var statusText = book.Status == "read" ? "Finished" :
                                                book.Status == "reading" ? "Reading" :
                                                book.Status == "abandoned" ? "Abandoned" : "Want to Read";
                                var typeClass = book.Type == "physical" ? "type-physical" : "type-digital";
                                var typeText = book.Type == "physical" ? "Physical" : "E-Book";
                                <tr data-id="@book.Id" data-type="@book.Type">
                                    <td class="book-cover-cell">
                                        @if (!string.IsNullOrEmpty(book.CoverImage))
                                        {
                                            <img src="@book.CoverImage" alt="@book.Title cover" class="book-cover-thumbnail" />
                                        }
                                        else
                                        {
                                            <div class="book-cover-placeholder">
                                                <i class="fas fa-book"></i>
                                            </div>
                                        }
                                    </td>
                                    <td class="book-title">@book.Title</td>
                                    <td>
                                        @if (book.Authors != null && book.Authors.Any())
                                        {
                                            @string.Join(", ", book.Authors.Select(a => a.Name))
                                        }
                                        else
                                        {
                                            @book.Author
                                        }
                                    </td>
                                    <td>@book.Genre</td>
                                    <td>@book.Pages</td>
                                    <td><span class="badge badge-type @typeClass">@typeText</span></td>
                                    <td><span class="badge badge-status @statusClass">@statusText</span></td>
                                    <td class="actions">
                                        <button class="btn-icon btn-icon-edit" onclick="editBook(@book.Id)" title="Edit book">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-icon btn-icon-delete" onclick="deleteBook(@book.Id)" title="Delete book">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <!-- Message Display for Authors -->
        <div id="authorMessage"></div>

        <!-- Add/Edit Author Form (Hidden by default) -->
        <div id="authorFormSection" class="content-section hidden">
            <div class="section-header">
                <h2 id="authorFormTitle">Add New Author</h2>
                <button type="button" class="btn-close" onclick="hideAuthorForm()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form id="formAuthor" class="modern-form">
                <input type="hidden" id="editAuthorId">

                <div class="form-grid">
                    <div class="form-group">
                        <label for="authorName">
                            <i class="fas fa-user"></i> Author Name
                        </label>
                        <input type="text" id="authorName" name="authorName" required
                               placeholder="e.g., J.K. Rowling"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="authorNationality">
                            <i class="fas fa-globe"></i> Nationality
                        </label>
                        <input type="text" id="authorNationality" name="authorNationality"
                               placeholder="e.g., British">
                    </div>
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="authorBio">
                            <i class="fas fa-info-circle"></i> Biography
                        </label>
                        <textarea id="authorBio" name="authorBio" rows="4"
                                  placeholder="Brief biography of the author..."></textarea>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="btnSubmitAuthor" class="btn-primary">
                        <i class="fas fa-save"></i> Save Author
                    </button>
                    <button type="button" id="btnCancelAuthor" class="btn-secondary" onclick="cancelAuthorEdit()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>

        <!-- Authors Section -->
        <div id="authorsSection" class="content-section hidden">
            <div class="section-header">
                <div>
                    <h2>Authors</h2>
                    <p class="section-subtitle">Manage your favorite authors</p>
                </div>
                <button class="btn-add" onclick="showAuthorForm()">
                    <i class="fas fa-plus"></i> Add Author
                </button>
            </div>

            <div id="authorsTableContainer" class="table-container">
                <!-- Will be populated by JavaScript -->
            </div>
        </div>

        <!-- Message Display for Collections -->
        <div id="collectionMessage"></div>

        <!-- Add/Edit Collection Form (Hidden by default) -->
        <div id="collectionFormSection" class="content-section hidden">
            <div class="section-header">
                <h2 id="collectionFormTitle">Create New Collection</h2>
                <button type="button" class="btn-close" onclick="hideCollectionForm()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form id="formCollection" class="modern-form">
                <input type="hidden" id="editCollectionId">

                <div class="form-grid">
                    <div class="form-group">
                        <label for="collectionName">
                            <i class="fas fa-layer-group"></i> Collection Name
                        </label>
                        <input type="text" id="collectionName" name="collectionName" required
                               placeholder="e.g., Fantasy Series"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="collectionDescription">
                            <i class="fas fa-info-circle"></i> Description
                        </label>
                        <textarea id="collectionDescription" name="collectionDescription" rows="4"
                                  placeholder="Describe this collection..."></textarea>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="btnSubmitCollection" class="btn-primary">
                        <i class="fas fa-save"></i> Save Collection
                    </button>
                    <button type="button" id="btnCancelCollection" class="btn-secondary" onclick="cancelCollectionEdit()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>

        <!-- Collections Section -->
        <div id="collectionsSection" class="content-section hidden">
            <div class="section-header">
                <div>
                    <h2>Collections</h2>
                    <p class="section-subtitle">Organize your books into collections</p>
                </div>
                <button class="btn-add" onclick="showCollectionForm()">
                    <i class="fas fa-plus"></i> Create Collection
                </button>
            </div>

            <div id="collectionsContainer" class="collections-grid">
                <!-- Will be populated by JavaScript -->
            </div>
        </div>

        <!-- Statistics Section -->
        <div id="statisticsSection" class="content-section hidden">
            <div class="section-header">
                <div>
                    <h2>Reading Statistics</h2>
                    <p class="section-subtitle">Track your reading progress</p>
                </div>
            </div>

            <div class="stats-placeholder">
                <i class="fas fa-chart-line" style="font-size: 64px; color: var(--text-secondary); margin-bottom: 16px;"></i>
                <h3>Statistics Coming Soon</h3>
                <p>This section will display your reading statistics, charts, and insights.</p>
            </div>
        </div>

        <!-- Settings Section -->
        <div id="settingsSection" class="content-section hidden">
            <div class="section-header">
                <div>
                    <h2>Settings</h2>
                    <p class="section-subtitle">Manage your preferences</p>
                </div>
            </div>

            <div class="settings-content">
                <h3>Account Settings</h3>
                <p>Settings options will be available here.</p>
            </div>
        </div>

        <!-- Add Author Modal (for Books form) -->
        <div id="addAuthorModalInBook" class="modal" style="display: none;">
            <div class="modal-content modal-content-medium">
                <div class="modal-header">
                    <h3><i class="fas fa-user-plus"></i> Add New Author</h3>
                    <button type="button" class="btn-close" onclick="closeAddAuthorModalInBook()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <form id="formAddAuthorInBook" class="modern-form">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="modalBookAuthorName">
                                <i class="fas fa-user"></i> Author Name
                            </label>
                            <input type="text" id="modalBookAuthorName" required placeholder="e.g., J.K. Rowling">
                        </div>
                        <div class="form-group">
                            <label for="modalBookAuthorNationality">
                                <i class="fas fa-globe"></i> Nationality
                            </label>
                            <input type="text" id="modalBookAuthorNationality" placeholder="e.g., British">
                        </div>
                        <div class="form-group" style="grid-column: 1 / -1;">
                            <label for="modalBookAuthorBio">
                                <i class="fas fa-info-circle"></i> Biography
                            </label>
                            <textarea id="modalBookAuthorBio" rows="4" placeholder="Brief biography of the author..."></textarea>
                        </div>
                        <div class="form-group-full" style="grid-column: 1 / -1;">
                            <label for="modalBookAuthorProfileImage">
                                <i class="fas fa-image"></i> Profile Image (Optional)
                            </label>
                            <div class="image-upload-area">
                                <input type="file" id="modalBookAuthorProfileImage" accept="image/*"
                                       onchange="handleModalAuthorImageSelect(event)" class="file-input">
                                <div id="modalAuthorImagePreviewContainer" class="image-preview-wrapper" style="display: none;">
                                    <div class="image-preview-circle">
                                        <img id="modalAuthorImagePreview" class="image-preview-img">
                                    </div>
                                    <button type="button" class="btn-remove-preview" onclick="removeModalAuthorImage()">
                                        <i class="fas fa-times-circle"></i> Remove Image
                                    </button>
                                </div>
                                <div id="modalAuthorImageUploadPlaceholder" class="upload-placeholder-enhanced">
                                    <div class="upload-icon-wrapper">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>
                                    <p class="upload-text">Click to upload or drag and drop</p>
                                    <small class="upload-hint">PNG, JPG, JPEG (max 5MB)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-save"></i> Add Author
                        </button>
                        <button type="button" class="btn-secondary" onclick="closeAddAuthorModalInBook()">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="~/js/books.js"></script>
</body>
</html>
