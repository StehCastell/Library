@model List<LibraryWeb.Models.Author>

@{
    ViewData["Title"] = "Authors";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Library System</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="dashboard-layout">
    <script>
        // Apply saved theme immediately (before page renders)
        // Priority: server theme > localStorage > default 'light'
        const serverTheme = '@ViewBag.UserTheme';
        const savedTheme = serverTheme || localStorage.getItem('theme') || 'light';
        localStorage.setItem('theme', savedTheme); // Sync localStorage with server
        if (savedTheme === 'dark') {
            document.body.classList.add('dark-theme');
        }
    </script>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-book"></i>
                <span>Library</span>
            </div>
        </div>

        <nav class="sidebar-nav">
            <a href="/books" class="nav-item">
                <i class="fas fa-th-large"></i>
                <span>Dashboard</span>
            </a>
            <a href="/books" class="nav-item">
                <i class="fas fa-book"></i>
                <span>Books</span>
            </a>
            <a href="/authors" class="nav-item active">
                <i class="fas fa-user-edit"></i>
                <span>Authors</span>
            </a>
            <a href="/collections" class="nav-item">
                <i class="fas fa-layer-group"></i>
                <span>Collections</span>
            </a>
            <a href="/books" class="nav-item">
                <i class="fas fa-chart-bar"></i>
                <span>Statistics</span>
            </a>
            <a href="/books" class="nav-item">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-details">
                    <div class="user-name">@ViewBag.UserName</div>
                    <a href="/account/logout" class="logout-link">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>

        <!-- Sidebar Collapse Button (inside sidebar, bottom) -->
        <button class="sidebar-collapse-btn" onclick="toggleSidebar()" title="Hide sidebar">
            <i class="fas fa-angles-left"></i>
        </button>
    </aside>

    <!-- Sidebar Overlay (for mobile) -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <!-- Sidebar Toggle Button (floating, bottom-left) -->
    <button class="sidebar-toggle-btn" onclick="toggleSidebar()" title="Show sidebar">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-header">
            <h1>Authors Management</h1>
            <p class="page-description">Manage and organize your favorite authors</p>
        </div>

        <!-- Message Display for Authors -->
        <div id="authorMessage"></div>

        <!-- Add/Edit Author Form (Hidden by default) -->
        <div id="authorFormSection" class="content-section hidden">
            <div class="section-header">
                <h2 id="authorFormTitle">Add New Author</h2>
                <button type="button" class="btn-close" onclick="hideAuthorForm()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form id="formAuthor" class="modern-form">
                <input type="hidden" id="editAuthorId">

                <div class="form-grid">
                    <div class="form-group">
                        <label for="authorName">
                            <i class="fas fa-user"></i> Author Name
                        </label>
                        <input type="text" id="authorName" name="authorName" required
                               placeholder="e.g., J.K. Rowling"
                               oninvalid="this.setCustomValidity('Please fill in this field')"
                               oninput="this.setCustomValidity('')">
                    </div>
                    <div class="form-group">
                        <label for="authorNationality">
                            <i class="fas fa-globe"></i> Nationality
                        </label>
                        <input type="text" id="authorNationality" name="authorNationality"
                               placeholder="e.g., British">
                    </div>
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label for="authorBio">
                            <i class="fas fa-info-circle"></i> Biography
                        </label>
                        <textarea id="authorBio" name="authorBio" rows="4"
                                  placeholder="Brief biography of the author..."></textarea>
                    </div>
                    <div class="form-group-full" style="grid-column: 1 / -1;">
                        <label for="authorProfileImage">
                            <i class="fas fa-image"></i> Profile Image (Optional)
                        </label>
                        <div class="image-upload-container">
                            <input type="file" id="authorProfileImage" accept="image/*"
                                   onchange="handleAuthorImageSelect(event)" class="file-input">
                            <div id="authorImagePreviewContainer" style="display: none;">
                                <img id="authorImagePreview" class="image-preview">
                                <button type="button" class="btn-remove-image" onclick="removeAuthorImage()">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div id="authorImageUploadPlaceholder">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <p>Click to upload or drag and drop</p>
                                <small>PNG, JPG, JPEG (max 5MB)</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="btnSubmitAuthor" class="btn-primary">
                        <i class="fas fa-save"></i> Save Author
                    </button>
                    <button type="button" id="btnCancelAuthor" class="btn-secondary" onclick="cancelAuthorEdit()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>

        <!-- Authors Section -->
        <div id="authorsSection" class="content-section">
            <div class="section-header">
                <div>
                    <h2>Authors</h2>
                    <p class="section-subtitle">Manage your favorite authors</p>
                </div>
                <button class="btn-add" onclick="showAuthorForm()">
                    <i class="fas fa-plus"></i> Add Author
                </button>
            </div>

            <div id="authorsTableContainer" class="table-container">
                <!-- Will be populated by JavaScript -->
            </div>
        </div>
    </main>

    <script src="~/js/authors.js"></script>
</body>
</html>
